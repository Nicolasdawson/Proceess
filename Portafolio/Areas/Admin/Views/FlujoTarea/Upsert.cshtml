@model Portafolio.Modelos.ViewModels.FlujoTareaVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Crear flujo de tareas";
}


<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.FlujoTarea.Id != 0)
        {
            //edit
            title = "Editar flujo de tareas";
            <input type="hidden" asp-for="FlujoTarea.Id" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FlujoTarea.Nom_flujo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FlujoTarea.Nom_flujo" class="form-control" />
                    <span asp-validation-for="FlujoTarea.Nom_flujo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FlujoTarea.Des_flujo"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="FlujoTarea.Des_flujo" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FlujoTarea.Progreso"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FlujoTarea.Progreso" class="form-control" />
                    <span asp-validation-for="FlujoTarea.Progreso" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Tipo
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.FlujoTarea.TipoFlujoId, Model.TipoFlujoList, "-Seleccionar un tipo de flujo",
                   new { @class = "form-control" })
                    <span asp-validation-for="FlujoTarea.TipoFlujoId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.FlujoTarea.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.FlujoTarea.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.tiny.cloud/1/9pdzcoj1o82gs6r1i49q2908tz91fd3kcc1rva65b1q0eqb5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>

        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        })

</script>

}